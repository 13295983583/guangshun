/* pages/user/particulars/index.wxss */

.hand {
  background: linear-gradient(to right, #ffb43e 0%, #fd9526 100%);
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.hand :nth-child(1) {
  font-size: 40rpx;
  font-weight: 500;
  line-height: 80rpx;
}

.hand :nth-child(2) {
  font-size: 25rpx;
}

.item {
  min-height: 40rpx;
  margin: 30rpx 0rpx;
  background: #fff;
  padding: 30rpx 30rpx;
  font-size: 14px;
  color: #555;
}

.item image {
  width: 18px;
  height: 18px;
}

.item .item_n {
  font-size: 14px;
  border-bottom: 1rpx solid #ebebeb;
  padding: 30rpx 0rpx;
  color: #555;
}

.item :last-child {
  border: none;
}

.item .content {
  min-height: 200rpx;
  padding: 30rpx 0rpx;
}

.item .addImg {
  width: 150rpx;
  height: 150rpx;
  background: #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item .addImg image {
  width: 120rpx;
  height: 120rpx;
}

.item .content .textareaBox {
  border: 1rpx solid #ccc;
  margin-top: 30rpx;
  height: 200rpx;
}
