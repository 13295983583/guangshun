page {
  background: #f3f3f3;
}

.title {
  background: #44abf7;
  height: 200rpx;
  position: relative;
}

.title .main {
  min-height: 100rpx;
  margin: 0px 100rpx;
  display: flex;
  padding-top: 50rpx
}
.title .main .icon{
  width: 50px;
  height:50px;
  background: #6f6;
  border-radius: 50px;
  overflow: hidden;
  border: 3px solid #fff;
}
.title .main .tex{
  /* text-indent:35px
   */
   padding-left:35px; 
   font-size: 14px;
   line-height: 25px;
   color: #fff;
}

.title .animation {
  position: absolute;
  left: 0;
  bottom: -10px;
  height: 30px;
  width: 100%;
  z-index: 1;
}

.title .animation .animation_1 {
  background: url(http://jy.yangshengjksh.com/core/resource/images/diy/gif/water-1.svg) repeat-x;
  background-size: 600px;
  -webkit-animation: wave-animation-1 3.5s infinite linear;
  animation: wave-animation-1 3.5s infinite linear;
}

.title .animation .animation_2 {
  top: 5px;
  background: url(http://jy.yangshengjksh.com/core/resource/images/diy/gif/water-2.svg) repeat-x;
  background-size: 600px;
  -webkit-animation: wave-animation-2 6s infinite linear;
  animation: wave-animation-2 6s infinite linear;
}

.title .animation .animation_1, .title .animation .animation_2 {
  position: absolute;
  width: 100%;
  height: 30px;
}

@keyframes wave-animation-1 {
  0% {
    background-position: 0 top;
  }

  100% {
    background-position: 600px top;
  }
}
@keyframes wave-animation-2 {
  0% {
    background-position: 0 top;
  }

  100% {
    background-position: 600px top;
  }
}
