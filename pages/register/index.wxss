/* pages/register/index.wxss */
.main{
		width: 100%;
		height: 100%;
		background: #fff;
    font-size: 14px;
	}
	.main .top{
		height: 13%;
		margin: 0 10px;
		display: flex;
		align-items: center;
		background: #fff;
	}

	.main .top .tex{
		margin-left:20px;
		font-size: 14px;
		line-height: 40px;
		color: #777;
	}
	.main .iptw{
		width: 95%;
		height: 50px;
		background: #fff;
    border-bottom: 1px solid #ccc;
    margin: 0px 10px;
    display: flex;
    align-items: center;
	}

	.main input{
		width: 70%;
		text-indent:10px;
		font-size: 14px;
	}
	.main input:focus{
		border: none;
	}
	
	.main .teshuBtn{
		font-size: 15px;
		text-indent:0px;
		line-height: 30px;
		background: #ff6600;
		border-radius: 5px;
		height: 30px;
		width: 30%;
		color: #fff;
    text-align: center;
	}

	.main .btn{
		width: 90%;
		height: 50px;
		margin: 40px auto;
		background: #fff;
		border: 1px solid #ccc;
		text-align: center;
		line-height: 50px;
		font-size: 20px;
		color:#ccc;
		font-weight: 100;
		border-radius: 5px;
	}
	.main .btn2{
		width: 90%;
		height: 50px;
		margin: 40px auto;
		background: #00c568;
		text-align: center;
		line-height: 50px;
		font-size: 20px;
		color:#fff;
		font-weight: 100;
		border-radius: 5px;
		border: none;
		display: block;
	}